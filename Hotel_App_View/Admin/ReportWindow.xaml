<Window x:Class="Hotel_App_View.Admin.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_App_View.Admin"
        mc:Ignorable="d"
        Title="ReportWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Transaction History" Margin="10,30,10,0" FontSize="20" FontWeight="Bold"/>
        <ListView Name="lvTransaction" Margin="10,0,10,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Transaction Date" Width="120" DisplayMemberBinding="{Binding Path=TransactionDate}" />
                    <GridViewColumn Header="Total Price" Width="100" DisplayMemberBinding="{Binding Path=Amount}"/>
                    <GridViewColumn Header="Staff" Width="120" DisplayMemberBinding="{Binding Path=Staff.FullName}"/>
                    <GridViewColumn Header="Customer" Width="120" DisplayMemberBinding="{Binding Path=Customer.FullName}"/>
                    <GridViewColumn Header="Room Number" Width="120" DisplayMemberBinding="{Binding Path=Room.RoomNumber}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
